<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lab3.MainActivity">
<Button
    android:id="@+id/CategoriesButton"
    android:text="@string/categores"
    android:onClick="onShowCatigories"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <Button
        android:id="@+id/PhotosButton"
        android:text="@string/Photos"
        android:onClick="onShowPhoto"
        android:layout_below="@+id/CategoriesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/StatisticsButton"
        android:text="@string/Statistics"
        android:layout_below="@+id/PhotosButton"
        android:onClick="onShowStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="@string/time"
        android:layout_below="@+id/StatisticsButton"
        android:onClick="onShowTimeRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
